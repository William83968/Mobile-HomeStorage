#:kivy 2.1.0
# Import modules
#:import WipeTransition kivy.uix.screenmanager.WipeTransition
#:import get_color_from_hex kivy.utils.get_color_from_hex
# Include other kv files
#:include login.kv
#:include home.kv
#:include signup.kv
#:include categories.kv
#:include houses.kv
#:include item.kv
#:include user.kv

<ItemDrawer>:
    theme_text_color: "Custom"
    text_color: app.theme_cls.text_color
    on_release: self.parent.set_color_item(self);app.root.ids.WindowManager.current = self.text+"Screen"

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<MainScreen@Screen>:
    Image:
        source: "images/star.jpg"
        size_hint: None, None
        size: self.parent.size
        allow_stretch: True
        keep_ratio: False

    ScreenManager:
        id: WindowManager
        transition: WipeTransition()
        LoginScreen:
        HomeScreen:
        SignupScreen:
        CategoriesScreen:
        HousesScreen:
        ItemScreen:
        UserScreen:

    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:
            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"
            BoxLayout:
                orientation: "vertical"
                height: avatar.height
                spacing: 10
                padding_x: 10
                MDFlatButton:
                    id: avatar
                    size_hint: None, None
                    size: "256", "172"
                    background_color: 0, 0, 0, 0
                    Image:
                        source: "images/homify-logo.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        size_hint: None, None
                        size: self.parent.size

                MDLabel:
                    text: "Homify Storage System"
                    size_hint_y: None
                    height: self.texture_size[1]

                ScrollView:
                    DrawerList:
                        id: menu_list





