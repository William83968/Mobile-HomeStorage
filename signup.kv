#:kivy 2.1.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient

<SignupScreen@MDScreen>:
    name: 'SignupScreen'
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            texture: 
                Gradient.horizontal(
                get_color_from_hex("#006080"), 
                get_color_from_hex("#00004d")
                )
    MDCard:
        size_hint: 0.7, 0.7
        pos_hint: {"center_x":0.5, "center_y":0.5}
        padding: 25
        spacing: 50
        orientation: "vertical"
   
        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 70
            halign: 'center'
            height: self.texture_size[1]
        
        BoxLayout:
            size_hint: 0.7, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: username
                hint_text: "username"
                icon_right: "account"
                helper_text: "This field is required"
                helper_text_mode: "on_error"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}

        BoxLayout:
            size_hint: 0.7, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: password
                hint_text: "password"
                helper_text: "This field is required"
                helper_text_mode: "on_error"
                icon_right: "eye-off"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}
                password: True

        BoxLayout:
            size_hint: 0.7, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: email
                hint_text: "email"
                icon_right: "email"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}
      
        BoxLayout:
            size_hint: 0.7, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: address
                hint_text: "address"
                icon_right: "home-city"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}

        BoxLayout:
            size_hint: 0.7, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: city
                hint_text: "city/town"
                icon_right: "city-variant"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}

        MDRectangleFlatButton:
            text: "SIGN UP"
            font_size: 30
            pos_hint: {"center_x":0.5}
            size_hint_x: 0.7
            on_press: if root.signup() == True: app.root.ids.WindowManager.current = "HomeScreen"

        MDRectangleFlatButton:
            text: "CLEAR"
            font_size: 30
            pos_hint: {"center_x":0.5}
            size_hint_x: 0.7
            on_press: root.clear()

        Widget: 
            size_hint_y: 0.6