#:kivy 2.1.0
#:import get_color_from_hex kivy.utils.get_color_from_hex

<LoginScreen@MDScreen>:
    name: 'LoginScreen'
    MDCard:
        size_hint: 0.7, 0.7
        pos_hint: {"center_x":0.5, "center_y":0.5}
        padding: 25
        spacing: 25
        orientation: "vertical"
        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 70
            halign: 'center'
            height: self.texture_size[1]

        BoxLayout:
            size_hint: 0.7, 0.2
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: username
                hint_text: "username"
                helper_text: "Incorrect username"
                helper_text_mode: "on_error"
                icon_right: "account"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}

            MDIconButton:
                icon: 'close'
                halign: 'right'
                pos_hint: {"center_y":0.5}
                on_press: root.clear_username()

        BoxLayout:
            size_hint: 0.7, 0.4
            pos_hint: {"center_x":0.5, "center_y":0.5}
            MDTextField:
                id: password
                hint_text: "password"
                helper_text: "Incorrect username"
                helper_text_mode: "on_error"
                icon_right: "eye-off"
                size_hint_x: 0.7
                font_size: 40
                pos_hint: {"center_x":0.5, "center_y":0.5}
                password: True

            MDIconButton:
                icon: 'close'
                halign: 'right'
                pos_hint: {"center_y":0.5}
                on_press: root.clear_password()

        MDRectangleFlatButton:
            text: "LOG IN"
            font_size: 30
            pos_hint: {"center_x":0.5, "center_y":0.}
            size_hint_x: 0.7
            on_press: app.root.ids.WindowManager.current = "HomeScreen"

        MDRectangleFlatButton:
            text: "SIGN UP"
            font_size: 30
            pos_hint: {"center_x":0.5, "center_y":0.}
            size_hint_x: 0.7
            on_press:  app.root.ids.WindowManager.current = "SignupScreen"

        Widget:
            size_hint_y: 0.5